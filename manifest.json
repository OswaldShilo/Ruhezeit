{
  "manifest_version": 3,
  "name": "Ruhezeit",
  "version": "1.0.0",
  "description": "Ruhezeit â€” AI-powered tab organizer and distraction-free focus sessions.",
  "icons": { "16":"icons/icon16.png", "48":"icons/icon48.png", "128":"icons/icon128.png" },
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "sidepanel.html", "default_icon": "icons/icon48.png" },
  "side_panel": { "default_path": "sidepanel.html" },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "optional_permissions": ["notifications"],
  
  "commands": {
    "tab_organize": {
      "suggested_key": { "default": "Ctrl+Shift+Y" },
      "description": "Tab Organization Mode"
    },
    "start_focus": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Start Focus Mode"
    }
    ,
    "toggle_panel": {
      "suggested_key": { "default": "Ctrl+Shift+K" },
      "description": "Toggle Ruhezeit floating panel"
    }
  }
}
